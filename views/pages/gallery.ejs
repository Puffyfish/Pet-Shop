<%- layout('layout/boilerplate')%>
<section class="row row-cols-1 row-cols-sm-2 row-cols-md-4 px-5 py-4 g-4">

    <% for (let animal of animals) {%>
      <div class="col">
    <div class="col card" style="width: 18rem;">
      <img src="<%=animal.image%>" class="card-img-top" alt="...">
      <div class="card-body">
        <a href="/<%=animal._id%>">
          <h5 class="card-title"><%= animal.name %></h5>
        </a>
        <ul>
          <li>Breed: <%=animal.breed%></li>
          <li>Age: <%= animal.age %></li>
          <li>Price: $<%= animal.price %></li>
        </ul>
        <div class="text-end">
          <a href="#" class="btn main-button">Adopt</a>
        </div>
      </div>
    </div>
  </div>
    <% } %>

</section>