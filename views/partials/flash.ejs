<!------ Success Flash ------>

  <% if (success && success.length) { %>
  <div
    class="alert alert-info alert-dismissible fade show"
    role="alert"
  >
    <%= success %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>

  <% } %>

  <!------ Error Flash ------>
  <% if (error && error.length) { %>

  <div
    class="alert alert-info alert-dismissible fade show"
    style="width: 250px"
    role="alert"
  >
    <%= error %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <% } %>
